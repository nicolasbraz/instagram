<div class="container d-flex flex-column">
  <div class="d-flex justify-content-center align-items-center gap-5">
    <div class="w-content border-2 border-top border-dark">
      <i class="fa-solid fa-table-cells"></i>
      <small>POSTS</small>
    </div>
    <div class="w-content border-2 border-dark">
      <i class="fa-solid fa-table-cells pt-2"></i>
      <small>SAVED</small>
    </div>
    <div class="w-content border-2  border-dark">
      <i class="fa-solid fa-table-cells pt-2"></i>
      <small>TAGGED</small>
    </div>
  </div>  
  <div class="row justify-content-center align-items-center">
    <% user.posts.each do |post| %>
      <div class="col-lg-4 col-md-6 col-sm-8 p-3 mb-4" style="height:20rem">
        <%= image_tag post.images.first, class: "img-thumbnail", style: "width:100%;height:20rem;object-fit:cover"%>
      </div>
    <% end %>
  </div>
</div>